{
  "name": "npdi-app",
  "version": "1.0.0",
  "description": "MilliporeSigma NPDI Application for Chemical Product Management",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "lint": "eslint .",
    "setup": "npm install && cd client && npm install",
    "init:permissions": "node initialize-permissions.js"
  },
  "keywords": [
    "npdi",
    "milliporesigma",
    "chemical",
    "product",
    "management"
  ],
  "author": "MilliporeSigma",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "nodemailer": "^6.9.4"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.47.0",
    "nodemon": "^3.0.1"
  }
}
